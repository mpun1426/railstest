<h3>ユーザー新規登録</h3>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user do |f| %>
  <table>
    <tr>
      <th><%= f.label :name ,"お名前" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :email ,"メールアドレス" %></th>
      <td><%= f.text_field :email %></td>
    </tr>

    <tr>
      <th><%= f.label :age ,"年齢" %></th>
      <td><%= f.text_field :age %></td>
    </tr>

    <tr>
      <th><%= f.label :introduction ,"自己紹介" %></th>
      <td><%= f.text_area :introduction %></td>
    </tr>    
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録" %></li>
      <li><%= link_to "戻る", :users %></li>
    </ul>
  </div> 
<% end %>
  