<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<h3>ユーザー情報一覧</h3>
<p> 参照から新規投稿できます</p>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>年齢</th>
      <th>自己紹介</th>
      <th>更新日</th>
      <th>作成日</th>
      <th>参照</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= user.introduction %></td>
        <td><%= user.updated_at.to_s(:datetime_jp) %></td>
        <td><%= user.created_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "参照", user %></td>
        <td><%= link_to "編集", [:edit, user] %></td>
        <td><%= link_to "削除", user, method: :delete, data: {confirm: "本当にユーザー登録を削除してよろしいですか？"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h3>投稿一覧</h3>

<table>
  <thead>
    <tr>
      <th>投稿内容</th>
      <th>更新日時</th>
      <th>投稿日時</th>
      <th>投稿者(ID)</th>
      <th>参照</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= post.created_at.to_s(:datetime_jp) %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to "参照", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= link_to "削除", post, method: :delete, data: {confirm: "投稿を削除してよろしいですか？"} %></td>
      </tr> 
    <% end %>
  </tbody>
</table>

<p>ユーザー新規登録は<%= link_to "こちら", :new_user %></p>